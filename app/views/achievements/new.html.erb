<strong>Add an achievement:</strong>
<%= form_with model: [ current_user, current_user.achievements.build ] do |form| %>

  <div class="form-group mb-2">
    <%= form.text_field :title, class: 'form-control', placeholder: "Title"%>
  </div>

  <div class="form-group mb-2">
    <%= form.rich_text_area :description, class: 'form-control', placeholder: "Description" %>
  </div>

  <div class="form-group mb-2">
    <%= form.button :submit, class: 'btn btn-outline-success' %>
  </div>
<% end %>

<%= link_to "Back", myprofile_path, class: 'btn btn-outline-secondary btn-sm' %>