<div class="card-title d-flex justify-content-between ">
  <div class="comment-<%= comment.id %> container">
  <%= comment.user.name %><br>
  <%= comment.context %>
  <p class="card-subtitle mb-2 text-muted">Posted <%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>

  <div>
  <% if current_user == comment.user || current_user.admin%>
    <%= button_to "Delete", [achievement, comment], method: :delete, class: 'btn btn-outline-danger'%>
  <% end %>
  </div>
</div>