<%= form_with(model: [@achievement, @achievement.comments.build]) do |form| %>

  <div class="form-group mb-2">
    <%= form.text_area :context, class: 'form-control', placeholder: "Comment:" %>
  </div>

  <div class="form-group mb-2">
    <%= form.button :submit, class: 'btn btn-outline-success' %>
  </div>
<% end %>