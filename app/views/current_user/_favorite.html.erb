<% followers = Relationship.all.where(follower_id: @user.id)%>

<% users_id = [] %>
<% followers.each{ |follower| users_id.push(follower.followed_id) } %>

<% users = [] %>

<% users_id.each do |user| %>
  <% users.push(User.find(user)) %>
<% end %>

<% students = [] %>
<% teachers = [] %>
<% users.each do |user| %>
  <% if user.is_teacher == false && user.admin == false %>
    <% students.push(user) %>
  <% elsif user.is_teacher == true %>
    <% teachers.push(user) %>
  <% end %>
<% end %>

<h5>My favorite:</h5>
<div class="container mb-2">
  <div class="row">
    <div class="col-sm">
      <h5>Students:</h5>
      <ul class="list-group">
        <% students.each do |student| %>
          <li class="list-group-item d-flex justify-content-between">
            <%=link_to student.name, student_path(student) %>
            <%= link_to image_tag("/assets/star.jpg", option = {height: "25px"}), { controller: 'relationships', action: "destroy", id: student.id }, remote: true, method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm">
      <h5>Teachers:</h5>
      <ul class="list-group">
        <% teachers.each do |teacher| %>
          <li class="list-group-item d-flex justify-content-between">
            <%=link_to teacher.name, teacher_path(teacher)%>
            <%= link_to image_tag("/assets/star.jpg", option = {height: "25px"}), { controller: 'relationships', action: "destroy", id: teacher.id }, remote: true, method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
