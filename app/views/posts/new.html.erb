<strong>Add an achievement:</strong>
<%= form_with model: [ current_user, current_user.posts.build ] do |form| %>

  <div class="form-group mb-2">
    <%= form.rich_text_area :body %>
  </div>

  <div class="form-group mb-2">
    <%= form.button :submit, class: 'btn btn-outline-success' %>
  </div>
<% end %>

<%= link_to "Back", user_posts_path, class: 'btn btn-outline-secondary btn-sm' %>