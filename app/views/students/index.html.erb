<h2 class='card-title'>Students</h2>

<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Search students", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil%>
    </div>
  </div>
<%end %>

<ul>
  <% @students.each do |student| %>
    <% if user_signed_in? && student == current_user%>
      <li>
        <%= link_to student.name, myprofile_path(student) %>
      </li>
      <% else %>
      <li>
        <%= link_to student.name, student_path(student) %>
      </li>
    <% end %>
  <% end %>
</ul>
